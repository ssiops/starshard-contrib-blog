<script src="/blog/js/app-editor{{#if production}}.min{{/if}}.js"></script>

<div class="container spaced-top">
  <div class="row">
    <div class="col-md-12">
      <h1>{{#if blog}}Edit{{else}}New{{/if}} Blog</h1>
    </div>
    <form class="col-md-9">
      <div class="cbg">
        <div class="form-group"><input type="text" id="title" name="title" class="form-control" placeholder="Blog title"></div>
        <div class="form-group"><input type="text" id="abstract" class="form-control" placeholder="Blog Abstract"></div>
        <div class="blog-tags form-control" ng-controller="tagsCtrl">
          <span class="label label-primary" ng-repeat="tag in tags">\{{tag}} <a href="#" ng-click="removeTag($index)"><i class="glyphicon glyphicon-remove"></i></a></span>
          <input type="text" id="tags" name="tags" class="input-tag" placeholder="Tag" ng-model="input" ng-blur="addTag()">
        </div>
      </div>
      <div class="cbg">
        <div class="form-group blog-content-editor" ng-controller="contentCtrl">
          <div class="btn-toolbar">
            <div class="btn-group">
              <button type="button" class="btn btn-default" ng-model="toolbar.bold" btn-checkbox><i class="glyphicon glyphicon-bold"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.italic" btn-checkbox><i class="glyphicon glyphicon-italic"></i></button>
            </div>
            <div class="btn-group">
              <button type="button" class="btn btn-default" ng-model="toolbar.link" btn-checkbox><i class="glyphicon glyphicon-link"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.quote" btn-checkbox><i class="glyphicon glyphicon-comment"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.code" btn-checkbox><i class="glyphicon glyphicon-italic"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.image" btn-checkbox><i class="glyphicon glyphicon-picture"></i></button>
            </div>
            <div class="btn-group">
              <button type="button" class="btn btn-default" ng-model="toolbar.ul" btn-checkbox><i class="glyphicon glyphicon-list"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.li" btn-checkbox><i class="glyphicon glyphicon-sort-by-order"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.h" btn-checkbox><i class="glyphicon glyphicon-header"></i></button>
              <button type="button" class="btn btn-default" ng-model="toolbar.hr" btn-checkbox><i class="glyphicon glyphicon-minus"></i></button>
            </div>
          </div>
          <textarea name="body" id="body" rows="24" class="form-control" placeholder="Blog content"></textarea>
        </div>
      </div>
    </form>
  </div>
</div>